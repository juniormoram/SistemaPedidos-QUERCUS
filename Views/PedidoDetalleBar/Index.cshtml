@model IEnumerable<QuercusPedidos.PedidoDetalleBar>

@{
    ViewBag.Title = "Index";
}

<h2>Bebidas de los pedidos</h2>

<form asp-controller="Bebidas" asp-action="Index">
    <p>
        Buscar por numero de pedido/orden: <input type="text" name="buscarD" class="form-text" />
        <input type="submit" value="Buscar" class="btn btn-sm btn-info" />
    </p>
</form>

<table class="table">
    <tr>
        <th>
            Numero de pedido/orden
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductoBar.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cantidad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CostoTotal)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id_BarDetalle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductoBar.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cantidad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CostoTotal)
        </td>
        <td>
            @Html.ActionLink("Actualizar", "Edit", new { id = item.Id_BarDetalle, id2 = item.Id_ProductoBar }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.Id_BarDetalle, id2 = item.Id_ProductoBar }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
