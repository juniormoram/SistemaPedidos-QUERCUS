@model QuercusPedidos.PedidoDetalleBar

@{
    ViewBag.Title = "Delete";
}

<h3>Esta seguro de eliminar esta bebida del pedido?</h3>
<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Bebida
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductoBar.Nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Cantidad)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cantidad)
        </dd>

        <dt>
            Costo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CostoTotal)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Eliminar" class="btn btn-success" /> |
        @Html.ActionLink("Regresar al listado de bebidas", "Index")
    </div>
    }
</div>
